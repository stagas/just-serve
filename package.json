{
  "name": "typescript-module-template",
  "version": "1.0.0",
  "private": true,
  "description": "my typescript module",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "type": "module",
  "types": "dist/types.d.ts",
  "scripts": {
    "watch": "parcel watch",
    "build": "parcel build",
    "examples": "parcel examples/index.html --https --open --port 8080",
    "test": "web-test-runner src/**/*.spec.ts --node-resolve --esbuild-target auto",
    "test:watch": "npm run test -- --watch",
    "cov": "web-test-runner src/**/*.spec.ts --node-resolve --esbuild-target auto --coverage",
    "cov:watch": "npm run cov -- --watch",
    "docs": "typedoc src/index.ts --emit docs --readme none --name 'My TypeScript Module' --publicPath '' --gitRevision main --hideBreadcrumbs && mv docs/README.md ./ && rimraf docs",
    "lint": "eslint **/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write **/*.ts",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [],
  "author": "stagas",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@parcel/config-default": "^2.0.0",
    "@parcel/validator-typescript": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/test-runner": "^0.13.20",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "parcel": "^2.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "typedoc": "^0.22.7",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.4.4"
  }
}
