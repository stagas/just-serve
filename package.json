{
  "name": "just-serve",
  "version": "1.0.1",
  "description": "cli tool to just serve a directory using https",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "bin": {
    "just-serve": "dist/index.js"
  },
  "targets": {
    "main": {
      "context": "node",
      "engines": {
        "node": ">=16.0"
      }
    }
  },
  "scripts": {
    "dev": "npm run watch & npm run test:serve",
    "watch": "parcel watch",
    "build": "parcel build",
    "test:install": "npm uninstall -g && npm install -g",
    "test:serve": "nodemon dist/index.js example",
    "test:help": "nodemon dist/index.js -- --help",
    "lint": "eslint **/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write **/*.ts",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "dev",
    "frontend",
    "static",
    "server",
    "reload"
  ],
  "author": "stagas",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "extatic": "4.1.3",
    "live-server-https": "0.0.2",
    "open": "^8.4.0",
    "qrcode-terminal": "^0.12.0",
    "read-dotenv": "^1.0.0",
    "running-at": "^0.3.22",
    "sse": "^0.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@parcel/config-default": "^2.0.0",
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@parcel/validator-typescript": "^2.0.0",
    "@tsconfig/node16": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.14",
    "parcel": "^2.0.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
}
