{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "isolatedModules": true,
    "module": "esnext",
    "target": "esnext",
    "strict": true
  }
}
